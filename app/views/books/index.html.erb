<p style="color: green"><%= notice %></p>

<% content_for :title, "Books" %>

<!-- <h1>Books</h1> -->

<ul id="books" class="bookgrid">
  <% @books.each do |book| %>
    <%= link_to book_path(book) do %>
      <li>
        <%= render BookComponent.new(cover: book.cover, title: book.title, author: book.author.name) %>
        <!-- <%= book.cover.attached? %>
        <%= image_tag url_for(book.cover) if book.cover.attached? %> -->
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New book", new_book_path %>
